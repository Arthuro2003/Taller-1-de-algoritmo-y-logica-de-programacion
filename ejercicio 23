Algoritmo par_mayor
	// se definen las variables
	Definir n1,n2,n3 Como Entero
	n1 <- 0; n2 <- 0; n3 <- 0
	// entrada y proceso del Algoritmo 
	Mientras n1<>-1 Hacer
		Escribir 'ingrese numeros(-1 para finalizar)'
		Leer n1
		Si (n1 MOD 2=0) Entonces
			n2 <- n1
		FinSi
		Si n2>n3 Entonces
			n3 <- n2
		FinSi
	FinMientras
	Escribir 'el numero mayor de los pares es: ',n3
FinAlgoritmo

Algoritmo binario
	// se definen las variables 
	Definir n1,n3,n4,bin Como Entero
	n1 <- 0; n3 <- 0; n4 <- 1; bin <- 0
	// entrada 
	Escribir 'ingrese numero decimal'
	Leer n1
	Mientras n1>0 Hacer
		n3 <- n1 MOD 2
		bin <- bin+n3*n4
		n1 <- trunc(n1/2)
		n4 <- n4*10
	FinMientras
	Escribir 'el numero en binario es: ',bin
FinAlgoritmo

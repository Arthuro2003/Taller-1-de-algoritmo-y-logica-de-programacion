Algoritmo vector_A_B
	// se definen las variables 
	Definir n1 Como Entero
	n1 <- 0
	Dimension vectorA[15],vectorB[15],vectorC[15]
	// entrada y proceso 
	Para i<-1 Hasta 15 Hacer
		Escribir 'ingrese numero en vector A     ',i
		Leer vectorA[i]
		Escribir 'ingrese numero en vector B     ',i
		Leer vectorB[i]
	FinPara
	Para i<-1 Hasta 15 Hacer
		vectorC[i] <- vectorA[i]+vectorB[i]
	FinPara
	Para i<-1 Hasta 15 Hacer
		Escribir 'vectorA(',i,')+vectorB(',i,')=',vectorC[i]
	FinPara
FinAlgoritmo
